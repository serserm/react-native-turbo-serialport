{
  "name": "mono-repo",
  "private": true,
  "author": "serserm",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "packageManager": "yarn@4.3.0",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "scripts": {
    "lint": "eslint \"./packages/**/src/**/*.{js,jsx,ts,tsx}\"",
    "typecheck": "tsc --noEmit --composite false",
    "test": "jest",
    "clean": "lerna run clean",
    "build": "lerna run build --no-private",
    "release": "lerna publish --no-private",
    "example": "yarn workspace react-native-turbo-serialport-example",
    "app": "yarn workspace expo-turbo-serialport-example",
    "codegen": "yarn example codegen",
    "start": "yarn example start",
    "android": "yarn example android",
    "ios": "yarn example ios"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.6.15",
    "@react-native/babel-preset": "^0.74.84",
    "@react-native/eslint-config": "^0.74.84",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.3",
    "prettier": "^3.3.2",
    "react": "18.2.0",
    "react-native": "0.74.2",
    "react-native-builder-bob": "^0.23.2",
    "typescript": "5.4.5"
  },
  "resolutions": {
    "@types/react": "^18.3.3"
  }
}
